{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "allowJs": false,
    "noEmit": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.js"]
}
